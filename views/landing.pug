extends layout

block content
  h1= title
  p Welcome to #{title}
  form(action="/", method="post")
    input(type="email", name="lead_email", placeholder="Enter email")
    button(type="submit") Submit
  if leads
    h1 Leads
    for lead in leads
      p
        span #{lead.email} 
        |
        a(href="/lead/" + lead.id) Details
