mixin navbar(user)
  nav.navbar.navbar-expand.navbar-light.bg-light.d-flex.flex-wrap
    a(href="/", aria-label="Lead Manager").navbar-brand.mr-0.mr-md-2
      strong Lead Manager
    .collapse.navbar-collapse
      ul.navbar-nav.mr-auto
        li.nav-item
          a.nav-link(href="/") Home
        li.nav-item
          if user
            if user.dataValues.is_admin
              a.nav-link(href="/leads") Leads
    .navbar-right
      if user
        span.navbar-text Hello #{user.email}!
    .navbar-right
      ul.navbar-nav.mr-auto
        li.nav-item
          if !user
            a.nav-link(href="/signup") Sign up
        li.nav-item
          if !user
            a.nav-link(href="/login") Login
        li.nav-item
          if user
            a.nav-link(href="/logout") Logout